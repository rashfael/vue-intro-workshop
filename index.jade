		h3 "Traditional" Server Based Pages
		svg.diagram.traditional(viewBox="0 0 10 10")
			defs
				marker#arrow-end(viewBox="0 0 10 10", refX="1", refY="5", markerUnits="strokeWidth", markerWidth="3", markerHeight="3", orient="auto")
					path(d="M 0 0 L 10 5 L 0 10 z")
			g(transform="translate(7,.1)").server
				rect(height="6", width="2")
				text(x=".2", y=".8") Server
			g(transform="translate(.1,.1)").browser
				rect(height="6", width="4")
				text(x=".2", y=".8") Browser
			g.fragment(transform="translate(4,.8)").arrow
				path(d="M .2 0 L 2.75 0")
				text(x=".3", y="-.15") GET /index.html
			g.fragment(transform="translate(4,1.25)").arrow
				path.dotted(d="M 2.85 0 L .35 0")
				text(x="2.2", y=".35") HTML
			g.fragment(transform="translate(.1,1.26)").page
				path(d="M 0 0 L 4 0")
