				text(x="2.2", y=".35") JSON
			text.action.fragment(x="1.7", y="2.6") CLICK &nbsp;&lt; a href="/form" &gt;
			g.fragment(transform="translate(.1,2.9)").page
				path(d="M 0 0 L 4 0")
				text(x=".2", y=".6") view /form
				text.action.fragment(x="3", y="1") submit form
			g.fragment(transform="translate(4, 3.83)").arrow
				path(d="M .2 0 L 2.75 0")
				text(x=".3", y="-.15") ASYNC POST /api/action JSON
			g.fragment(transform="translate(4,4.1)").arrow
				path.dotted(d="M 2.85 0 L .35 0")
				text(x="2.2", y=".35") JSON
			g.fragment(transform="translate(.1,4.1)").page
				path.reload(d="M 0 0 L 4 0")
				text(x=".2", y=".6") view /success
		aside.notes
			ul
