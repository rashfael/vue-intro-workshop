			g.fragment(transform="translate(4,2.17)").arrow
				path(d="M .2 0 L 2.75 0")
				text(x=".3", y="-.15") GET /form.html
			g.fragment(transform="translate(4,2.7)").arrow
				path.dotted(d="M 2.85 0 L .35 0")
				text(x="2.2", y=".35") HTML
			g.fragment(transform="translate(.1,2.7)").page
				path.reload(d="M 0 0 L 4 0")
				text.reload(x="1.7", y=".1") RELOAD
				text(x=".2", y=".6") page /form.html
				text.action.fragment(x="3", y="1") submit form
			g.fragment(transform="translate(4, 3.63)").arrow
				path(d="M .2 0 L 2.75 0")
				text(x=".3", y="-.15") POST /success.html FORMDATA
			g.fragment(transform="translate(4,4.1)").arrow
				path.dotted(d="M 2.85 0 L .35 0")
				text(x="2.2", y=".35") HTML
			g.fragment(transform="translate(.1,4.1)").page
				path.reload(d="M 0 0 L 4 0")
				text.reload(x="1.7", y=".1") RELOAD
				text(x=".2", y=".6") page /success.html
